<style type="text/css">
	.import-header{
		text-align: center;
		margin-bottom: 20px;
	}
	.btn-col button{
		width: 100%;
	}
	.form-control-file{
		display: inline !important;
	}
	.col-sm-4{
	    min-height: 150px;
	    background: white;
	    padding: 50px 15px;
	     width: 30%; 
	    margin: 0px 1%;
	    box-shadow: inset 0 1px 0 rgba(255,255,255,.15), 0 1px 5px rgba(0,0,0,.075);
	    border: 1px solid #eaeaea;
	    background-color: #f1f1f1;
	    text-align: center;
	}
	.file{
		width: 185px;
	}
	.form-group{
		margin-top: 15px;
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-sm-4">
			<h4 class="import-header">Import Users</h4>
			<form enctype="multipart/form-data" action="/users/import" accept-charset="UTF-8" method="post" class="form-vertical">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			  <div class="form-group">
			    <label for="file" class="control-label">File:</label>
		  		<input type="file" name="file" id="file" class="form-control-file file" required/>
			</div>
			<div class="checkbox">
			  <label><input type="checkbox" name="inactive" value="">Inactive</label>
			</div>
				<div class="row">
					<div class="col-sm-2">
					</div>
					<div class="col-sm-8 btn-col">
			  		<button type="submit" class="btn btn-sm btn-primary" name="commit" data-disable-with="Import">Import</button>
			  		</div>
			  		<div class="col-sm-2">
			  		</div>
		  		</div>
			</form>
		</div>
		<div class="col-sm-4">
			<h4 class="import-header">Import Commissions</h4>
			<form enctype="multipart/form-data" action="/transactions/import" accept-charset="UTF-8" method="post" class="form-vertical">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			  <div class="form-group">
			    <label for="file" class="control-label">File:</label>
		  		<input type="file" name="file" id="file" class="form-control-file file" required/>
			</div>
				<div class="row">
					<div class="col-sm-2">
					</div>
					<div class="col-sm-8 btn-col">
			  		<button type="submit" class="btn btn-sm btn-primary" name="commit" data-disable-with="Import">Import</button>
			  		</div>
			  		<div class="col-sm-2">
			  		</div>
		  		</div>
			</form>
		</div>
		<div class="col-sm-4">
			<h4 class="import-header">Import Holds</h4>
			<form enctype="multipart/form-data" action="/holds/import" accept-charset="UTF-8" method="post" class="form-vertical">
			<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
			  <div class="form-group">
			    <label for="file" class="control-label">File:</label>
		  		<input type="file" name="file" id="file" class="form-control-file file" required/>
			</div>
				<div class="row">
					<div class="col-sm-2">
					</div>
					<div class="col-sm-8 btn-col">
			  		<button type="submit" class="btn btn-sm btn-primary" name="commit" data-disable-with="Import">Import</button>
			  		</div>
			  		<div class="col-sm-2">
			  		</div>
		  		</div>
			</form>
		</div>
	</div>
</div>